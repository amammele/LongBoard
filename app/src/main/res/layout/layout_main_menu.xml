<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartButtonLable"
        android:id="@+id/StartButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_gravity="center"
        android:layout_above="@+id/StartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StopButtonLable"
        android:id="@+id/StopButton"
        android:layout_below="@+id/StartButton"
        android:layout_alignLeft="@+id/StartButton"
        android:layout_alignStart="@+id/StartButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/StartCount"
        android:layout_alignTop="@+id/chronometer"
        android:layout_alignLeft="@+id/StartButton"
        android:layout_alignStart="@+id/StartButton"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/StopCount"
        android:layout_below="@+id/StartCount"
        android:layout_alignLeft="@+id/StartCount"
        android:layout_alignStart="@+id/StartCount" />

</RelativeLayout>
